@page "/Account/Manage/PersonalData"

@using Microsoft.AspNetCore.Identity
@using company_expenses_auth.Data

@inject UserManager<ApplicationUser> UserManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>Personal Data</PageTitle>

<div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Personal Data</h1>
    <p class="text-gray-600">Download or delete your personal information</p>
</div>

<StatusMessage />

<div class="space-y-6">
    <div class="p-6 bg-blue-50 border border-blue-200 rounded-lg">
        <p class="text-gray-700 mb-2">Your account contains personal data that you have given us. This page allows you
            to download or delete that data.</p>
        <p class="text-gray-700">
            <strong class="text-red-600">Warning:</strong> Deleting this data will permanently remove your account, and
            this cannot be recovered.
        </p>
    </div>

    <div class="flex gap-3">
        <form action="Account/Manage/DownloadPersonalData" method="post">
            <AntiforgeryToken />
            <button type="submit"
                class="px-6 py-2.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium shadow-sm">
                Download Data
            </button>
        </form>

        <a href="Account/Manage/DeletePersonalData"
            class="px-6 py-2.5 bg-red-600 text-white rounded-lg hover:bg-red-700 transition font-medium shadow-sm inline-block">
            Delete Account
        </a>
    </div>
</div>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        var user = await UserManager.GetUserAsync(HttpContext.User);
        if (user is null)
        {
            RedirectManager.RedirectToInvalidUser(UserManager, HttpContext);
        }
    }
}